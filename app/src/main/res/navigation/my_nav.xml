<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/ridesFragment">

    <fragment
        android:id="@+id/ridesFragment"
        android:name="com.example.hsd.ui.RidesFragment"
        android:label="My Rides"
        tools:layout="@layout/fragment_rides" >
        <action
            android:id="@+id/action_ridesFragment_to_rideDetailsFragment"
            app:destination="@id/rideDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/rideDetailsFragment"
        android:name="com.example.hsd.ui.RideDetailsFragment"
        android:label="Ride Details"
        tools:layout="@layout/fragment_ride_details" />
</navigation>